<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <ImageView
        android:id="@+id/userphoto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:alpha="0.2"
        android:src="@drawable/user"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/firstName"
        android:layout_alignBottom="@+id/lastName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences"
        android:hint="First Name"
        android:ems="10"
        android:id="@+id/firstName"
        android:layout_alignParentTop="true"
        android:layout_marginTop="46dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/userphoto"
        android:layout_toEndOf="@+id/userphoto" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:ems="10"
        android:id="@+id/lastName"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/firstName"
        android:layout_alignRight="@+id/firstName"
        android:layout_alignEnd="@+id/firstName"
        android:layout_toRightOf="@+id/userphoto"
        android:layout_toEndOf="@+id/userphoto"
        android:inputType="textCapSentences" />

    <ImageView
        android:id="@+id/callphoto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/userphoto"
        android:layout_alignTop="@+id/phone"
        android:alpha="0.2"
        android:src="@drawable/call" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:inputType="phone"
        android:hint="Phone Number"
        android:ems="10"
        android:id="@+id/phone"
        android:layout_below="@+id/lastName"
        android:layout_alignRight="@+id/lastName"
        android:layout_alignEnd="@+id/lastName"
        android:layout_toRightOf="@+id/userphoto"
        android:layout_toEndOf="@+id/userphoto" />

    <ImageView
        android:id="@+id/emailidphoto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/callphoto"
        android:layout_alignTop="@+id/email"
        android:alpha="0.2"
        android:src="@drawable/email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:ems="10"
        android:id="@+id/email"
        android:layout_below="@+id/phone"
        android:layout_marginTop="40dp"
        android:layout_alignRight="@+id/phone"
        android:layout_alignEnd="@+id/phone"
        android:layout_alignLeft="@+id/phone"
        android:layout_alignStart="@+id/phone" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/saveButton"
        android:layout_marginTop="72dp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
